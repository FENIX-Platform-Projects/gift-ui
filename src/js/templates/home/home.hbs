<h1>{{home_welcome_title}}</h1>
<hr>
<div class="row">

    <!-- Slider section-->
    <div class="col-xs-6">
        <section class="slider-container gift-containers-home">
            <div class="slider-header gift-headers-home" ><h2 class="slider-header title">{{slider_title}}</h2></div>
