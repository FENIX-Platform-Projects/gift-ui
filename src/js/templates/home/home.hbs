                <div class="swiper-wrapper">

                    <div class="swiper-slide afo-slider-1">

                        <div class="afo-slider-content">
                            <h3 class="afo-title">FOCUS</h3>

                            <h1 class="afo-slider-title">To feed the people, we must first feed the soil</h1>

                            <p class="afo-slider-subtitle">Olusegun Obasanjo, Former President of Nigeria</p>
                        </div>

                    </div>

                    <div class="swiper-slide afo-slider-2">

                        <div class="afo-slider-content">
                            <h3 class="afo-title">FOCUS</h3>

                            <h1 class="afo-slider-title">Tracking fertilizer production, trade and use in Africa</h1>

                            <p class="afo-slider-subtitle">LEARN MORE</p>
                        </div>

                    </div>

                    <div class="swiper-slide afo-slider-3">

                        <div class="afo-slider-content">
                            <h3 class="afo-title">FOCUS</h3>

                            <h1 class="afo-slider-title">Monitoring fertilizer prices from ports to farms</h1>

                            <p class="afo-slider-subtitle">LEARN MORE</p>
                        </div>

                    </div>

                    <div class="swiper-slide afo-slider-4">

                        <div class="afo-slider-content">
                            <h3 class="afo-title">FOCUS</h3>

                            <h1 class="afo-slider-title">Connecting fertilizer industry with agro dealers across Africa</h1>

                            <p class="afo-slider-subtitle">LEARN MORE</p>
                        </div>

                    </div>

                    <div class="swiper-slide afo-slider-5">

                        <div class="afo-slider-content">
                            <h3 class="afo-title">FOCUS</h3>

                            <h1 class="afo-slider-title">Promoting new fertilizer technologies in Africa</h1>

                            <p class="afo-slider-subtitle">LEARN MORE</p>
                        </div>

                    </div>

            </div>
            <div class="slider-footer gift-footer-home"></div>
        </section>
    </div>

    <!-- Fast link section-->
