<h1 class="main-title">{{home_welcome_title}}</h1><h2 class="prototype">PROTOTYPE</h2>

<div class="row">

    <!-- Slider section-->
    <div class="col-sm-6">
        <section class="gift-containers-sliders-home">


            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    {{#each slides}}
                        <li data-target="#carousel-example-generic"
                            data-slide-to={{isI18n data_link}} class={{isI18n active_link}}></li>
                    {{/each}}
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    {{#each slides}}
                        <div class="{{{ isI18n class_item }}}">


                            <div style="background-image: url({{isI18n src}})" class="home-gallery-item"></div>

                            <div class="carousel-caption">

                            </div>
                        </div>
                    {{/each}}

                </div>
                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">{{slides_prev}}</span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">{{slides_next}}</span>
                </a>


            </div>

        </section>
    </div>

    <!-- Fast link section-->
    <div class="col-sm-6">
        <section class="fast-link-container gift-containers-sliders-home">
            <div class="fast-link-header gift-headers-home"><h3 class="slider-header title"><span
                    class="icojam_flash2"></span> {{fast_link_title}}</h3>
            </div>
            <div class="fast-link-holder gift-holders-home">
                <div class="row">
                    <div class="col-sm-6 home-tiles food-cons">
                        <a href="{{  link_food_consumption }}"
                           target="_blank"><h2><span class="icojam_plate_1"> </span><br> {{  title_food_consumption }}
                        </h2></a>
                    </div>
                    <div class="col-sm-6  home-tiles food-safe">
                        <a href="{{  link_food_safety }}"
                           target="_blank"><h2><span class="icojam_chemistry_2"></span> <br> {{  title_food_safety }}
                        </h2></a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6  home-tiles food-nutr">
                        <a href="{{  link_food_nutrition }}"
                           target="_blank"><h2><span class="growing-ico"></span> {{  title_food_nutrition }}</h2>
                        </a>
                    </div>
                    <div class="col-sm-6  home-tiles food-envi ">
                        <a href="{{  link_food_environment }}"
                           target="_blank" class="coming"><h2><span class="icojam_geography_globe"></span>
                            <br> {{  title_food_environment }}</h2></a>
                    </div>
                </div>
            </div>
            <div class="fast-link-footer gift-footer-home"></div>
        </section>
    </div>
</div>

<hr>

<div class="row">
    <div class="col-sm-6">
        <!-- Db updates section -->
        <section class="db-updates-container gift-containers-home">
            <div class="db-updates-header gift-headers-home">
                <h3 class="title">{{database_update_title}}</h3>
            </div>
            <div class="db-updates-list-holder gift-holders-home">
                <ul id="db-updates-list" class="db-updates-list"></ul>
            </div>
            <div class="db-updates-list-footer gift-footer-home"></div>
        </section>
    </div>

    <div class="col-sm-6">
        <!-- Contacts section -->
        <section class="contacts-info-container gift-containers-home">
            <div class="row">
                <div class="col-sm-6">
                    <div class="contacts-collaborations-container">
                        <div class="contacts-collaborations-header">
                            <h3 class="contacts-collaborations-header title">{{contacts_collaborations_title}}</h3>

                        </div>
                        <div class="contacts-collaborations-holder">
                            <div class="slider-holder gift-holders-home">

                                <div class="swiper-header-container">

                                    <div id='gift-contributors' class="swiper-container">
                                        <div class="swiper-wrapper">
                                            {{#each contributors}}
                                            <div class="swiper-slide home-event red-slide">
                                                <h2>{{title}}</h2>
                                                <p>{{description}}</p>
                                            </div>
                                            {{/each}}
                                        </div>
                                    </div>
                                    <!-- Add Pagination -->
                                    <div class="swiper-pagination"></div>
                                    <!-- Add Arrows -->
                                    <div class="swiper-button-next"></div>
                                    <div class="swiper-button-prev"></div>
                                </div>
                            </div>

                        </div>
                        <div class="contacts-collaborations-footer"></div>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="contacts-people-container">
                        <div class="contacts-people-header">
                            <h3 class="contacts-people-header title">{{contact_us.upper_title}}</h3>
                        </div>
                        <div class="contacts-people-holder">
                            <h3>{{contact_us.lower_title}}</h3>

                            <p>{{{contact_us.address}}}</p>


                            <p>{{{contact_us.hq_address}}}</p>

                            <p>{{{contact_us.other_info}}}</p>

                        </div>
                        <div class="contacts-people-footer"></div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
<br><br><br><br>