<div class="row">

    <div class="col-xs-12">
        <ul class="nav nav-tabs">

            <li class="active"><a data-toggle="tab" href="#dailyPortion">{{dailyPortion}}</a></li>

        </ul>

        <div class="tab-content">

            <div id="dailyPortion" class="tab-pane fade in active">

                <div class="row">
                    <div class="col-xs-4">

                        <h3>
                            <span>{{indicator}}</span>
                            <span> {{foodSafetyTitle}}</span>
                        </h3>
                        <span>{{foodSafetyDescription}}</span>

                        <div data-role="filter"></div>
                    </div>

                    <div class="col-xs-8">

                        <br>
                        <br>
                        <br>
                        <br>

                        <div class="row">

                            <div class="col-xs-5">

                                <div class="progress population-percentage">
                                    <div id='columns-progress-bar' class="progress-bar" role="progressbar"
                                         aria-valuenow="0"
                                         aria-valuemin="0" aria-valuemax="100" style="width:0%">
                                        <span class="sr-only"></span>
                                    </div>
                                </div>
                                <div class="population-text text-center">
                                    <b><span class="percentage" id="percentage">30%</span></b> of the population
                                    consumed <b><span
                                        class="item">DRIED FRUIT</span></b>
                                    during the survey day
                                </div>
                            </div>
                            <div class="col-xs-7">
                                <div class="columns-holder" id="columnChart">
                                    <div class="column-text text-center">Out of them:</div>
                                    <div id="column"></div>
                                    <div class="axis"></div>
                                    <div class="details low text-center">
                                        <span class="percentage">5%</span>
                                        <span class="text">Consumes in average</span>
                                        <span class="amount" id="amount_low">5g/day</span>
                                    </div>
                                    <div class="details medium text-center">
                                        <span class="percentage">90%</span>
                                        <span class="text">Consumes in average</span>
                                        <span class="amount" id="amount_middle">20g/day</span>
                                    </div>
                                    <div class="details high text-center">
                                        <span class="percentage">5%</span>
                                        <span class="text">Consumes in average</span>
                                        <span class="amount" id="amount_high">70g/day</span>
                                    </div>

                                </div>
                            </div>

                        </div>

                    </div>
                </div>

            </div>

        </div>
    </div>

</div>